<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--CDKItem系列控件属性 -->
    <!--Item -->
    <declare-styleable name="CDKItem">
        <attr name="android:title"/>
        <attr name="android:summary"/>
        <attr name="android:icon"/>
    </declare-styleable>
    <!--ItemSwitch-->
    <declare-styleable name="CDKItemSwitch">
        <attr name="android:title"/>
        <attr name="android:summary"/>
        <attr name="android:icon"/>
        <attr name="android:summaryOn"/>
        <attr name="android:summaryOff"/>
        <attr name="android:checked"/>
    </declare-styleable>
    <!--ItemSeekBar-->
    <declare-styleable name="CDKItemSeekBar">
        <attr name="android:title"/>
        <attr name="android:summary"/>
        <attr name="android:icon"/>
        <attr name="android:progress"/>
        <attr name="android:max"/>
        <attr name="android:min"/>
    </declare-styleable>
    <!--ItemNimble-->
    <declare-styleable name="CDKItemNimble">
        <attr name="iconLocation" format="enum"><!--控件方向-->
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
        <attr name="title"/>
        <attr name="cardbackground" format="reference"/>
        <attr name="image" format="reference"/><!--控件图片-->
    </declare-styleable>
    <!--CDKNimbleSwitch-->
    <declare-styleable name="CDKNimbleSwitch">
        <attr name="android:checked"/>
    </declare-styleable>
    <!--CDKAutoImageView微动背景图-->
    <declare-styleable name="CDKAutoImageView">
        <attr name="android:src" format="reference"/>
    </declare-styleable>
    <!--CDKProgressBar进度条-->
    <declare-styleable name="CDKProgressBar">
        <attr name="android:max"/>
        <attr name="android:min"/>
        <attr name="android:progress"/>
        <attr name="displayMode" format="integer">
            <flag name="none" value="1"/>
            <flag name="extremum" value="2"/>
            <flag name="number" value="4"/>
            <flag name="percent" value="8"/>
        </attr>
    </declare-styleable>
    <!--LabelView小标签组件-->
    <declare-styleable name="CDKLabelView">
        <attr name="android:text"/>
        <attr name="android:textColor"/>
        <attr name="android:background"/>
        <attr name="android:src"/>
    </declare-styleable>
</resources>
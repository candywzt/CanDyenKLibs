<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CDKActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--标题栏-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 主要颜色 -->
        <item name="colorPrimary">@color/mainGC4_1</item>
        <item name="colorPrimaryVariant">@color/mainGC4_4</item>
        <item name="colorOnPrimary">@color/mainGC4_3</item>
        <!-- 次要颜色 -->
        <item name="colorSecondary">@color/mainGC4_1</item>
        <item name="colorSecondaryVariant">@color/mainGC4_2</item>
        <item name="colorOnSecondary">@color/mainGC4_3</item>
        <!--刘海屏区域显示-->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--虚拟键和小白条-->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--MaterialButton控件-->
        <item name="materialButtonStyle">@style/CDKWidget.Button.TextButton.Solid</item>
        <item name="materialButtonOutlinedStyle">@style/CDKWidget.Button.TextButton.Outlined</item>
        <!--RecyclerView控件-->
        <item name="recyclerViewStyle">@style/CDKWidget.RecyclerView.FastScrollBars</item>
    </style>
    <!--BottomSheetDialog上拉弹窗主题-->
    <style name="Theme.CDKDialog.Bottom" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CDKWidget.Dialog.Bottom.Modal</item>
    </style>
    <!--*****************************************************************************************-->


</resources>
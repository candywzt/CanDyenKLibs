<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical">
        <View
                android:layout_width="match_parent"
                android:layout_height="96dp"/>
        <EditText
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="/data/adb"
                android:id="@+id/et"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
            <Button
                    android:text="绑定"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/b1"/>
            <Button
                    android:text="解绑"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/b1_1"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
            <Button
                    android:text="本地列出目录"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/b2"/>
            <Button
                    android:text="服务列出目录"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/b2_1"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
            <Button
                    android:text="本地读取文件"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/b3"/>
            <Button
                    android:text="服务读取文件"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/b3_1"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
            <Button
                    android:text="本地文件管理"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/b4"/>
            <Button
                    android:text="服务文件管理"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/b4_1"/>
        </LinearLayout>
        <TextView
                android:layout_margin="16dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_frame"
                android:text="日志"
                android:id="@+id/tv"/>
    </LinearLayout>
</ScrollView>